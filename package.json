{
  "name": "rideplanner",
  "version": "0.0.1",
  "description": "Starter for express 4 w/ postgres and passportJS for auth",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "watch": "webpack --watch && npm run watch:css",
    "start-dev": "npm run eslint:server && nodemon server.js",
    "eslint:server": "eslint models routes server.js",
    "build": "webpack && npm run eslint:server && npm run build:css",
    "build:css": "node-sass --include-path scss front-end/src/scss/app.scss public/css/app.css",
    "watch:css": "nodemon -e scss -x \"npm run build:css\"",
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm test -- --watch",
    "db:migrate": "sequelize db:migrate",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "axios": "^0.8.1",
    "babel-core": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "bcrypt": "^0.8.5",
    "bluebird": "^3.1.1",
    "body-parser": "^1.14.2",
    "config": "^1.19.0",
    "connect-flash": "^0.1.1",
    "debug": "^2.2.0",
    "del": "^2.2.0",
    "eslint": "^1.10.3",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-react": "^3.15.0",
    "express": "~4.13.x",
    "express-session": "^1.13.0",
    "flux-standard-action": "^0.6.0",
    "history": "^2.0.0-rc2",
    "immutable": "^3.7.6",
    "jade": "^1.11.0",
    "morgan": "^1.6.1",
    "mustbe": "^0.4.0",
    "node-config": "0.0.2",
    "node-sass": "^3.4.2",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "4.x",
    "pg-hstore": "^2.3.2",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-loader": "^2.0.0",
    "react-pure-render": "^1.0.2",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "redux": "^3.0.5",
    "redux-thunk": "^1.0.3",
    "sequelize": "^3.17.3",
    "sequelize-cli": "^2.3.1",
    "webpack": "^1.12.11"
  },
  "engines": {
    "node": "5.0.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krousseau/fullstack-js-express4-react-starter"
  },
  "keywords": [
    "node",
    "heroku",
    "express",
    "postgres",
    "mustbe",
    "sequelize",
    "passportJs",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {},
  "paths": {
    "source": {
      "css": [
        "front-end/src/css/*.scss"
      ],
      "js": "front-end/src/js/**/*.*",
      "serverJs": [
        "server.js",
        "routes/**/*.js",
        "config/**/*.js",
        "models/**/*.js"
      ]
    },
    "dest": {
      "css": "./public/css",
      "js": "./public/js"
    }
  }
}
